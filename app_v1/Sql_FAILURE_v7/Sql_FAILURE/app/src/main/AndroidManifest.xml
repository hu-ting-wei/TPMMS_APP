<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label=""
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NoActionBar"
        tools:targetApi="31">

        <activity
            android:name=".CheckActivity"
            android:exported="true">


        </activity>
        <activity
            android:name=".post_activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".post_activities.PostActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:parentActivityName=".post_activities.MainActivity" />
        <activity
            android:name=".post_activities.NewActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:parentActivityName=".post_activities.PostActivity" />
        <activity
            android:name=".post_activities.EditActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:parentActivityName=".post_activities.PostActivity" />
        <activity
            android:name=".post_activities.TaskcardSelectActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:parentActivityName=".post_activities.NewActivity" />
        <activity
            android:name=".post_activities.TaskcardStatusActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:parentActivityName=".post_activities.TaskcardSelectActivity" />
    </application>

</manifest>